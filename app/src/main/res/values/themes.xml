<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BuscaMercado" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/yellow_base</item>
        <item name="colorSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/yellow_base</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Splash Theme-->
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/yellow_base</item>
        <item name="colorSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/yellow_base</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.NavigationDrawer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.NavigationDrawer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>